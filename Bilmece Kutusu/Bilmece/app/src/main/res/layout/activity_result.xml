<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/the_game_background"
    tools:context="com.example.user.bilmece.Result">

    <ImageView
        android:id="@+id/imageViewHighScore"
        android:layout_width="352dp"
        android:layout_height="158dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:alpha="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSkorTable"
        android:layout_width="264dp"
        android:layout_height="192dp"
        android:layout_marginBottom="142dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="11dp"
        android:background="@color/wrongAnswerRed"
        android:fontFamily="@font/press_start_2p"
        android:padding="30dp"
        android:textAlignment="center"
        android:textColor="@color/darkerWhite"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</android.support.constraint.ConstraintLayout>
